"use client";

import "@rainbow-me/rainbowkit/styles.css";

import {
RainbowKitProvider,
darkTheme,
getDefaultConfig,
} from "@rainbow-me/rainbowkit";
import { WagmiProvider, http } from "wagmi";
import { mainnet, bsc } from "wagmi/chains";
import { QueryClient, QueryClientProvider } from "@tanstack/react-query";

const queryClient = new QueryClient();

// Wagmi + RainbowKit config (ETH + BNB)
const config = getDefaultConfig({
appName: "PENQUIN Control Panel",
projectId: process.env.NEXT_PUBLIC_WALLETCONNECT_ID || "test-project-id",

// Chains that RainbowKit / wagmi should support
chains: [mainnet, bsc],

transports: {
[mainnet.id]: http("https://cloudflare-eth.com"),
[bsc.id]: http("https://bsc-dataseed1.binance.org"),
},
});

export function Providers({ children }) {
return (
<WagmiProvider config={config}>
<QueryClientProvider client={queryClient}>
<RainbowKitProvider
theme={darkTheme({
accentColor: "#facc15", // amber
accentColorForeground: "#020617", // almost black
})}
>
{children}
</RainbowKitProvider>
</QueryClientProvider>
</WagmiProvider>
);
}